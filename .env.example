# ========================================
# Kick Inn UX Automation - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it's in .gitignore)

# ========================================
# API Keys (REQUIRED)
# ========================================

# Anthropic Claude API
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=ghp_your-token-here


# ========================================
# Repository Configuration (REQUIRED)
# ========================================

# Your GitHub repository (format: username/repo-name)
GITHUB_REPO=your-username/kickinn

# Default branch to create PRs against
GITHUB_BRANCH=main

# GitHub username for commits
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your-email@example.com


# ========================================
# Application URLs (REQUIRED)
# ========================================

# Base URL of your Kick Inn application
KICKINN_BASE_URL=https://kickinn.app

# Lovable.dev project URL (for sync)
LOVABLE_PROJECT_URL=https://lovable.dev/projects/your-project-id


# ========================================
# Processing Configuration (OPTIONAL)
# ========================================

# Max concurrent video generation (default: 3)
MAX_CONCURRENT_VIDEOS=3

# Video recording quality (default: hd)
# Options: hd (1920x1080), fhd (1920x1080), 4k (3840x2160)
VIDEO_QUALITY=hd

# Analysis depth (default: detailed)
# Options: quick, standard, detailed
ANALYSIS_DEPTH=detailed

# Enable debug mode (default: false)
DEBUG_MODE=false


# ========================================
# Notifications (OPTIONAL)
# ========================================

# Slack Webhook URL
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration (SMTP)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_FROM=automation@kickinn.com
EMAIL_TO=team@kickinn.com
EMAIL_PASSWORD=your-app-password

# Notification preferences
NOTIFY_ON_START=true
NOTIFY_ON_COMPLETION=true
NOTIFY_ON_ERROR=true


# ========================================
# Advanced Configuration (OPTIONAL)
# ========================================

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Timeout configuration (seconds)
VIDEO_GENERATION_TIMEOUT=300
ANALYSIS_TIMEOUT=180
CODE_GENERATION_TIMEOUT=240

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data retention (days)
KEEP_VIDEOS_DAYS=7
KEEP_REPORTS_DAYS=30
KEEP_LOGS_DAYS=14


# ========================================
# Development & Testing (OPTIONAL)
# ========================================

# Test with sample data only
SAMPLE_MODE=false
SAMPLE_SIZE=3

# Dry run (don't actually push to GitHub)
DRY_RUN=false

# Skip video generation (use existing videos)
SKIP_VIDEO_GENERATION=false

# Skip analysis (use existing reports)
SKIP_ANALYSIS=false


# ========================================
# Feature Flags (OPTIONAL)
# ========================================

# Enable experimental features
ENABLE_WEB_DASHBOARD=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_PARALLEL_ANALYSIS=false
ENABLE_AUTO_MERGE_PR=false


# ========================================
# Notes
# ========================================
# 
# Required variables must be set for the system to work.
# Optional variables have sensible defaults.
# 
# For production deployment, also consider:
# - Using a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Rotating API keys regularly
# - Using environment-specific configs (.env.production, .env.staging)
# 
# Security reminders:
# - Never commit .env to version control
# - Use strong, unique API keys
# - Limit API token permissions to minimum required
# - Enable 2FA on GitHub account
# 
